# MeloGo 环境配置文件

# 服务器配置
SERVER_HOST=localhost
SERVER_PORT=8080
SERVER_DEBUG=true
SERVER_TLS=false
SERVER_CERT_FILE=
SERVER_KEY_FILE=

# 数据库配置
DATABASE_PATH=./data/melogo.db

# 音乐目录配置
MUSIC_DIRECTORY=./music
# 音乐扫描间隔（分钟）
MUSIC_SCAN_INTERVAL=5

# 其他配置
# 是否允许注册
ALLOW_REGISTRATION=true
# JWT 密钥
JWT_SECRET=melogo

# 音乐信息刮削API配置
LYRICS_API_URL=https://api.lrc.cx